CFLAGS+=-O0 -g
#CFLAGS+=-O2
#CFLAGS+=-Os -g
#CFLAGS+=-O3
#CFLAGS+=-Os
CFLAGS+=-Wall
#CFLAGS+=-Wall

# you can temporarily disable warnings to remove unhelpful clutter:
#CFLAGS+=-Wno-unused

all: $(ARTIFACT)

OBJS+=stb_divide.o stb_ds.o stb_sprintf.o # stb deps
OBJS+=utf8.o allocator.o args.o gig.o mie.o selftest.o # common deps

LDFLAGS+=-lm

$(ARTIFACT): $(OBJS)
	$(CC) -o $(ARTIFACT) $(OBJS) $(LDFLAGS)

clean:
	rm -f *.o *.wasm $(ARTIFACT)
